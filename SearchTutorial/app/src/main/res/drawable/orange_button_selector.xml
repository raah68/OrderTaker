<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient  android:startColor="#d26f1e" android:centerColor="#ff9531" android:endColor="#ffcb5b" android:angle="90" />
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="#c07232"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient  android:startColor="#ffcb5b" android:centerColor="#ff9531" android:endColor="#d26f1e" android:angle="90" />
            <corners android:radius="10dp"/>
            <stroke android:width="4dp" android:color="#c07232"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
</selector>