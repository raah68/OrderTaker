<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient  android:startColor="#7e9744" android:centerColor="#99c04b" android:endColor="#ccf470" android:angle="90" />
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="#7f9646"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient  android:startColor="#ccf470" android:centerColor="#99c04b" android:endColor="#7e9744" android:angle="90" />
            <corners android:radius="10dp"/>
            <stroke android:width="4dp" android:color="#7f9646"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
</selector>