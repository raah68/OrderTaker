<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient  android:startColor="#376cae" android:centerColor="#427dc4" android:endColor="#98bdd5" android:angle="90" />
            <stroke android:width="2dp" android:color="#376daf"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient  android:startColor="#98bdd5" android:centerColor="#427dc4" android:endColor="#376cae" android:angle="90" />
            <stroke android:width="4dp" android:color="#376daf"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
</selector>