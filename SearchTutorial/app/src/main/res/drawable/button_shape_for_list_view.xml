<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outside border/shadow -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <size android:width="200dp" android:height="50dp" />
            <solid android:color="@color/colorDarkGrey"/>
        </shape>
    </item>
    <!-- Inset -->
    <item android:top="3dp" android:left="3dp" android:right="4dp" android:bottom="5dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPurple"/>
        </shape>
    </item>
</layer-list>
