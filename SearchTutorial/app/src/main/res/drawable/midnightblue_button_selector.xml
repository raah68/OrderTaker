<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient  android:startColor="#614582" android:centerColor="#77559f" android:endColor="#c49eeb" android:angle="90" />
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="#614582"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient  android:startColor="#c49eeb" android:centerColor="#7546be" android:endColor="#614582" android:angle="90" />
            <corners android:radius="10dp"/>
            <stroke android:width="4dp" android:color="#614582"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
</selector>